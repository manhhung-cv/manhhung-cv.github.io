{
    "manifest_version": 3,
    "name": "Smiles Remit Pro",
    "version": "1.2",
    "description": "Tính toán tỷ giá Smiles trực tiếp trên trang web.",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "host_permissions": [
        "https://app.scrapingbee.com/*",
        "https://www.smileswallet.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}